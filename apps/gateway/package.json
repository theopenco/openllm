{
	"name": "gateway",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"files": [
		"dist/",
		"openapi.json"
	],
	"scripts": {
		"build": "tsc && tsup && pnpm generate",
		"dev": "concurrently 'nodemon -e ts,json --exec \"tsx src/serve.ts\"' 'nodemon -e ts,json --exec \"tsx src/worker.ts\"'",
		"generate": "NODE_ENV=production tsx ./src/scripts/generate-openapi.ts",
		"start": "node dist/serve.js"
	},
	"dependencies": {
		"@hono/node-server": "^1.14.1",
		"@hono/swagger-ui": "^0.5.1",
		"@hono/zod-openapi": "^0.19.6",
		"@hono/zod-validator": "^0.5.0",
		"@llmgateway/db": "workspace:*",
		"@llmgateway/models": "workspace:*",
		"gpt-tokenizer": "2.9.0",
		"hono": "^4.7.6",
		"hono-openapi": "^0.4.6",
		"ioredis": "5.6.1",
		"redis": "5.5.5",
		"zod": "3.24.3",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@types/node": "^22.15.17",
		"tsx": "^4.19.3"
	}
}
